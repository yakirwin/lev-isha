<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hadassah.azrieli.lev_isha.core.BeforeDoctorFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/checklist_margin_between_sections"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_components">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_text_doctor_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/doctor_name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_components">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_text_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/address"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_sections"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/appointment"
                android:textColor="@android:color/black"
                android:textSize="@dimen/checklist_font_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/appointment_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:editable="false"
                        android:hint="@string/date"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/appointment_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:editable="false"
                        android:hint="@string/time"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/add_appointment_to_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_appointment_to_calendar" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_sections"
            android:text="@string/remember_to_bring_with_you"
            android:textColor="@android:color/black"
            android:textSize="@dimen/checklist_font_size_normal" />

        <CheckBox
            android:id="@+id/check_box_references"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_components"
            android:text="@string/references" />

        <CheckBox
            android:id="@+id/check_box_prescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prescription" />

        <CheckBox
            android:id="@+id/check_box_Previous_diagnoses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Previous_diagnoses" />

        <CheckBox
            android:id="@+id/check_box_tests_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tests_results" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_sections"
            android:text="@string/subjects_i_want_to_talk_about"
            android:textColor="@android:color/black"
            android:textSize="@dimen/checklist_font_size_normal" />

        <EditText
            android:id="@+id/text_box_subjects_i_want_to_talk_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_components"
            android:hint="@string/subjects_i_want_to_talk_about_hint"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollbars="vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_sections"
            android:text="@string/new_symptoms"
            android:textColor="@android:color/black"
            android:textSize="@dimen/checklist_font_size_normal" />

        <EditText
            android:id="@+id/text_box_new_symptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_components"
            android:hint="@string/new_symptoms_hint"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollbars="vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_sections"
            android:text="@string/additional_information"
            android:textColor="@android:color/black"
            android:textSize="@dimen/checklist_font_size_normal" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_components">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_box_changes_in_life"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/changes_in_life_hint"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_components">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_box_personal_medical_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/personal_medical_history_hint"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_components">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_box_family_health_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/family_health_background_hint"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_sections"
            android:text="@string/drugs_i_take"
            android:textColor="@android:color/black"
            android:textSize="@dimen/checklist_font_size_normal" />

        <EditText
            android:id="@+id/text_box_drugs_i_take"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_components"
            android:hint="@string/drugs_i_take_hint"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollbars="vertical"
            android:textSize="@dimen/checklist_font_size_normal" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_sections"
            android:text="@string/additional_questions_to_the_doctor"
            android:textColor="@android:color/black"
            android:textSize="@dimen/checklist_font_size_normal" />

        <EditText
            android:id="@+id/text_box_additional_questions_to_the_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checklist_margin_between_components"
            android:hint="@string/additional_questions_to_the_doctor_hint"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollbars="vertical" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

