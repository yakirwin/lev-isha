<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hadassah.azrieli.lev_isha.core.HealthRecommendationsActivity">

    <WebView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/personal_health_recommendation_webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadeScrollbars="false"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars="vertical" />

    <ProgressBar
        android:id="@+id/personal_health_recommendation_progress_bar"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/personal_health_recommendation_dim_screen_background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:src="@android:color/black"/>

    <ImageView
        android:id="@+id/personal_health_recommendation_scrolling_indication_icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:alpha="0"
        android:scaleX="4"
        android:scaleY="4"
        android:src="@drawable/arrow_up" />

    <ImageView
        android:id="@+id/personal_health_recommendation_scrolling_indication_icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/personal_health_recommendation_scrolling_indication_icon1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:alpha="0"
        android:scaleX="4"
        android:scaleY="4"
        android:src="@drawable/arrow_up" />

    <ImageView
        android:id="@+id/personal_health_recommendation_scrolling_indication_icon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/personal_health_recommendation_scrolling_indication_icon2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:alpha="0"
        android:scaleX="4"
        android:scaleY="4"
        android:src="@drawable/arrow_up" />

    <ImageView
        android:id="@+id/personal_health_recommendation_scrolling_indication_icon4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/personal_health_recommendation_scrolling_indication_icon3"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:alpha="0"
        android:scaleX="4"
        android:scaleY="4"
        android:src="@drawable/arrow_up" />

    <ImageView
        android:id="@+id/personal_health_recommendation_scrolling_indication_icon5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/personal_health_recommendation_scrolling_indication_icon4"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:alpha="0"
        android:scaleX="4"
        android:scaleY="4"
        android:src="@drawable/arrow_up" />


</RelativeLayout>
